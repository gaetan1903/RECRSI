

<ContentNavigationDrawer>:

    ScrollView:

        MDList:

            OneLineIconListItem:
                text: "Livraison"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 1"
                    app.root.ids.toolbar.title = "Livraison"
                    
                IconLeftWidget:
                    icon: "cart-arrow-right"
                

            OneLineIconListItem:
                text: "Commande"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 2"
                    app.root.ids.toolbar.title = "Commande"
                IconLeftWidget:
                    icon: "database-plus"

            OneLineIconListItem:
                text: "Stock"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 3"
                    app.root.ids.toolbar.title = "Gestion de Stock"
                IconLeftWidget:
                    icon: "store"

            OneLineIconListItem:
                text: "Statistique"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 4"
                    app.root.ids.toolbar.title = "Statistique"
                IconLeftWidget:
                    icon: "chart-bar"

Screen:
    BoxLayout:
        orientation: 'vertical'
    	MDToolbar:
    		title: 'Livraison'
            id: toolbar
    		left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        	on_action_button: app.callback(self.icon)


        NavigationLayout:
            x: toolbar.height

            ScreenManager:
                id: screen_manager

                Screen:
                    name: "scr 1"

                    MDLabel:
                        text: "Screen 1"
                        halign: "center"

                Screen:
                    name: "scr 2"

                    MDCard:
                        size_hint: .8, .8
                        pos_hint: {"center_x": .5, "center_y": .5}
                        padding: "36dp"

                        MDBoxLayout:
                            adaptive_height: True
                            orientation: 'vertical'
                            pos_hint: {"center_x": .5, "center_y": .55}

                            MDTextField:
                                id: refCommande
                                pos_hint: {'center_x': .5, 'center_y': .1}
                                hint_text: "Reference Produit"
                                on_focus: if self.focus: app.menu.open()

                            MDTextField:
                                id: quantite
                                text: '1'
                                pos_hint: {'center_x': .5, 'center_y': .1}
                                hint_text: "Quantit√©"
                                input_type: 'number'

                            MDTextField:
                                id: adresse
                                pos_hint: {'center_x': .5, 'center_y': .1}
                                hint_text: "Adresse"

                            MDTextField:
                                id: contact
                                pos_hint: {'center_x': .5, 'center_y': .1}
                                hint_text: "Contact"
                                input_type: 'number'


                            MDTextField:
                                id: nomClient
                                pos_hint: {'center_x': .5, 'center_y': .1}
                                hint_text: "Nom du client"

                            MDTextField:
                                id: dateLivraison
                                pos_hint: {'center_x': .5, 'center_y': .1}
                                hint_text: "Date de livraison"
                                on_focus: if self.focus: app.show_datePicker()

                            MDRaisedButton:
                                text: "CONFIRMER"
                                pos_hint: {"center_x": .5, "center_y": .1}
                                md_bg_color: self.theme_cls.primary_color
                                on_release: app.validateCommande()

                                
                            
                Screen:
                    name: "scr 3"

                    MDLabel:
                        text: "Screen 3"
                        halign: "center"

                Screen:
                    name: "scr 4"

                    MDLabel:
                        text: "Screen 4"
                        halign: "center"

            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer
